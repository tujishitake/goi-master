<% content_for(:title) do %>
  ユーザー一覧 | Goi Master
<% end %>

<div class="row">
  <div class="col-sm-12 users-title">
    <h3 class="text-center">ユーザー一覧</h3>
  </div>
  
  <% @users.each do |user| %>

    <div class="col-sm-3 text-center users-list">
      <span class="gravatar">
        <img src="<%= gravatar_url(user, size: 50) %>" alt="" class="img-circle">
        <%= link_to user.name, user, class: "name" %>
      </span>
    </div>
    
  <% end %>
</div>