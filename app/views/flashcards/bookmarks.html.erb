<% content_for(:title) do %>
  ブックマーク | Goi Master
<% end %>

<div class="bookmark">
  <div class="col-xs-12 title">
    <h3 class="text-center">ブックマーク一覧</h3>
  </div>
  
  <% @flashcards.each do |flashcard| %>
    
    <table class="table table-bordered">
      <h3><%= flashcard.deck.name %> <span class="language"> ( text1言語 : <%= flashcard.deck.text1_language %>、text2言語 : <%= flashcard.deck.text2_language %> )</span></h3>
      <tr>
        <td class="col-xs-4 text1">
          <span class="text" data-lang="<%= flashcard.deck.text1_language_for_uttr %>" data-text="<%= flashcard.text1 %>"><%= flashcard.text1 %></span>
        </td>
        <td class="col-xs-4 text2">
          <span class="text" data-lang="<%= flashcard.deck.text2_language_for_uttr %>" data-text="<%= flashcard.text2 %>"><%= flashcard.text2 %></span>
        </td>
        <td class="col-xs-3 image">
          <!--<img src="<%#= flashcard.photo %>" width= 150, height= 150>-->
          <% if flashcard.image %>
            <%= image_tag(flashcard.image) %>
          <% end %>
        </td>
        <td class="col-xs-1 bookmark">
          <%= render 'flashcards/bookmark_button', flashcard: flashcard %>
        </td>
      </tr>
    </table>
  <% end %>
</div>